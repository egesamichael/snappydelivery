<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.praisewebhost.snappydelivery.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_send"
        android:name="com.praisewebhost.snappydelivery.ui.send.SendFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_send" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.praisewebhost.snappydelivery.ui.history.HistoryFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.praisewebhost.snappydelivery.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_history" />
</navigation>